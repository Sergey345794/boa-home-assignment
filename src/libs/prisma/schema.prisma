generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model session {
  id               String  @id @db.VarChar(255)
  shop             String  @db.VarChar(255)
  state            String  @db.VarChar(255)
  isOnline         Int     @db.TinyInt
  scope            String? @db.VarChar(1024)
  expires          Int?
  onlineAccessInfo String? @db.VarChar(255)
  accessToken      String? @db.VarChar(255)

  @@map("shopify_sessions")
}

model shopify_sessions_migrations {
  migration_name String @id @db.VarChar(255)
}

model savedCart {
  id         Int      @id @default(autoincrement()) 
  items      String   @db.Text       
}

model themeSettings {
  id              Int     @id @default(autoincrement())
  text            String  @default("Welcome to your saved cart feature!")
  textColor       String  @default("#333333")
  backgroundColor String  @default("#f5f5f5")
}
